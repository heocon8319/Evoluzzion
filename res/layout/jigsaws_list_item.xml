<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/jigsaw_image"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:contentDescription="@string/jigsaw_image"
        android:scaleType="centerCrop"
        android:layout_margin="4dip" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    android:paddingLeft="10dip"
	    android:background="@color/background_box_color"
	    android:layout_margin="4dip"
	    android:layout_marginLeft="0dip" >
	    <TextView 
	        android:id="@+id/jigsaw_name"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/inner_list_font_color"
	        android:textSize="18sp"
	        android:layout_marginTop="60dip"
	        android:layout_marginRight="10dip"
	       	android:gravity="center"
	       	/>
	    <TextView 
	        android:id="@+id/jigsaw_pieces"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/inner_list_font_color"/>
	    <TextView 
	        android:id="@+id/jigsaw_barcode"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/inner_list_font_color"/>
	</LinearLayout>
</LinearLayout>